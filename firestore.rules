
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* ===============================
       HELPER FUNCTIONS
    =============================== */
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      // Admin check relies on the email claim in the auth token.
      return isSignedIn() && request.auth.token.email == 'abhayrat603@gmail.com';
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /* ===============================
       USERS
    =============================== */
    match /users/{userId} {
      // A user can get or update their own profile. Admin can do the same.
      allow get, update: if isOwner(userId) || isAdmin();
      // Only an admin can delete user profiles.
      allow delete: if isAdmin();
      // Allow any signed-in user to create their own user document upon signup.
      allow create: if isOwner(userId);
      
      // Explicitly deny listing all users to non-admins.
      allow list: if isAdmin();

      // --- USER SUB-COLLECTIONS ---
      match /notifications/{notificationId} {
        // A user can read their own notifications. Admin can too.
        allow get, list: if isOwner(userId) || isAdmin();
        // Only an admin can create/update/delete notifications.
        allow write: if isAdmin();
      }

      match /downloadableProducts/{productId} {
        // A user can read their own downloadable products. Admin can too.
        allow read: if isOwner(userId) || isAdmin();
        // Only an admin can create/update/delete products.
        allow write: if isAdmin();
      }
    }
    
    // This allows an admin to list all users, but no one else.
    match /users/{document=**} {
      allow list: if isAdmin();
    }


    /* ===============================
       APP SETTINGS (PUBLIC READ, ADMIN WRITE)
    =============================== */
    match /app-settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    /* ===============================
       PUBLIC & ADMIN COLLECTIONS
    =============================== */
    match /services/{serviceId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /comboPackages/{comboId} {
      allow read: if true;
      allow write: if isAdmin();
    }

     match /media/{mediaId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    /* ===============================
       COUPONS
    =============================== */
    match /coupons/{couponId} {
      // Allow signed-in users to read coupons to check validity.
      allow get, list: if isSignedIn();
      // Allow admins to manage coupons.
      allow write: if isAdmin();
      // Allow any user to increment 'currentUses' when they apply a coupon.
      allow update: if isSignedIn()
        && request.resource.data.diff(resource.data)
          .affectedKeys()
          .hasOnly(['currentUses']);
    }

    /* ===============================
       ORDERS (FINAL SECURE VERSION)
    =============================== */
    match /orders/{orderId} {

      // Admins have full read and write access to all orders.
      allow read, write: if isAdmin();
      // Only Admins can list the entire orders collection.
      allow list: if isAdmin();

      // A user can create their own order document.
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid;

      // A user can read THEIR OWN order document.
      // This rule is checked by Firestore when a query with a `where` clause is made.
      // `get` operations also work with this rule.
      allow read: if isOwner(resource.data.userId);
    }
  }
}
