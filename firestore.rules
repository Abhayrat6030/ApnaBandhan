
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Publicly readable data
    match /services/{serviceId} {
      allow get, list: if true;
      allow write: if false;
    }

    match /comboPackages/{comboPackageId} {
      allow get, list: if true;
      allow write: if false;
    }

    match /media/{mediaId} {
      allow get, list: if true;
      allow write: if false;
    }

    // Orders: Users can create their own orders. Admins can read all orders.
    match /orders/{orderId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow get: if request.auth != null && (resource.data.userId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true);
      allow list, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // User-specific data
    match /users/{userId} {
      // A user can read and update their own profile data.
      allow get, update: if request.auth != null && request.auth.uid == userId;
      // Nobody can list all users or delete a user profile directly.
      allow list, delete: if false;
      // Allow users to create their own profile document.
      allow create: if request.auth != null && request.auth.uid == userId;

      // Notifications: Users can list and read their own notifications.
      match /notifications/{notificationId} {
        allow get, list: if request.auth != null && request.auth.uid == userId;
        allow write: if false; // Only server/admins should write notifications
      }

      // Downloadable Products: Users can list and read their own products.
      match /downloadableProducts/{productId} {
        allow get, list: if request.auth != null && request.auth.uid == userId;
        allow write: if false; // Only server/admins should create download links
      }
    }
  }
}
