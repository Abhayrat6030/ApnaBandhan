
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* ===============================
       HELPER FUNCTIONS
    =============================== */
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      // For this prototype, we'll check the admin email.
      // In a production app, this should check a custom claim:
      // return isSignedIn() && request.auth.token.admin == true;
      return isSignedIn() && request.auth.token.email == 'abhayrat603@gmail.com';
    }

    /* ===============================
       USERS
       /users/{userId}
    =============================== */
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();

      match /notifications/{notificationId} {
        allow read: if isOwner(userId);
        allow write: if isAdmin();
      }

      match /downloadableProducts/{productId} {
        allow read: if isOwner(userId);
        allow write: if isAdmin();
      }
    }

    /* ===============================
       PUBLIC COLLECTIONS
    =============================== */
    match /services/{serviceId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /comboPackages/{comboId} {
      allow read: if true;
      allow write: if isAdmin();
    }
     match /media/{mediaId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    /* ===============================
       ORDERS (FIXED + SAFE)
       /orders/{orderId}
    =============================== */
    match /orders/{orderId} {
      // Users can create orders for themselves.
      // The `status` and `paymentStatus` must be "Pending" on creation.
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.status == "Pending"
        && request.resource.data.paymentStatus == "Pending";

      // Admins can get any order. Users can only get their own.
      allow get: if isAdmin() || (resource.data.userId != null && isOwner(resource.data.userId));

      // Only Admins can update an order.
      allow update: if isAdmin();

      // Deleting orders is blocked for data integrity.
      allow delete: if false;
    }
    
    // IMPORTANT: This separate rule block for the collection is crucial.
    // It allows admins to perform a `list` query on the entire `orders` collection,
    // which is required for the admin dashboard.
    match /orders {
        allow list: if isAdmin();
    }
  }
}
