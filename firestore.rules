
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return request.auth.token.email == 'abhayrat603@gmail.com';
    }

    // Admin has global access
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    /* ===============================
       HELPER FUNCTIONS
    =============================== */
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /* ===============================
       USERS
       /users/{userId}
    =============================== */
    match /users/{userId} {
      // Users can read and write their own data. Admins can too.
      allow read, write: if isOwner(userId) || isAdmin();

      match /notifications/{notificationId} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if isAdmin(); // Only admin can send notifications
      }

      match /downloadableProducts/{productId} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if isAdmin(); // Only admin can add downloadable products
      }
    }

    /* ===============================
       SETTINGS (ADMIN ONLY)
    =============================== */
    match /app-settings/{settingId} {
      allow read, write: if isAdmin();
    }
    
    /* ===============================
       PUBLIC COLLECTIONS
    =============================== */
    match /services/{serviceId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /comboPackages/{comboId} {
      allow read: if true;
      allow write: if isAdmin();
    }
     match /media/{mediaId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    /* ===============================
       ORDERS (SECURE)
    =============================== */
     match /orders/{orderId} {
      // Admins can read/write any order.
      allow read, write: if isAdmin();
      
      // Users can create orders for themselves with specific initial data.
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.status == "Pending"
        && request.resource.data.paymentStatus == "Pending";
      
      // Allow users to read their own orders.
      allow get, list: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
  }
}
