
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return request.auth.token.email == 'abhayrat603@gmail.com';
    }

    // Admin has global access to read anything
    match /{document=**} {
      allow read: if isAdmin();
    }

    /* ===============================
       HELPER FUNCTIONS
    =============================== */
    function isSignedIn() {
      return request.auth.id != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /* ===============================
       USERS
       /users/{userId}
    =============================== */
    match /users/{userId} {
      // Allow signed-in users to read their own profile, and admins to read any.
      allow get: if isOwner(userId) || isAdmin();
      
      // Allow any user (even unauthenticated) to query the users collection.
      // This is required to validate referral codes during signup.
      allow list: if true;
      
      // New users can create their own profile document.
      allow create: if isOwner(userId);

      // Users can update their own profile, admins can update any.
      allow update: if isOwner(userId) || isAdmin();

      // Only admins can delete user documents.
      allow delete: if isAdmin();

      match /notifications/{notificationId} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if isAdmin(); // Only admin can send notifications
      }

      match /downloadableProducts/{productId} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if isAdmin(); // Only admin can add downloadable products
      }
    }

    /* ===============================
       SETTINGS (PUBLIC READ, ADMIN WRITE)
    =============================== */
    match /app-settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    /* ===============================
       PUBLIC & ADMIN COLLECTIONS
    =============================== */
    match /services/{serviceId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /comboPackages/{comboId} {
      allow read: if true;
      allow write: if isAdmin();
    }
     match /media/{mediaId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /coupons/{couponId} {
      // Allow signed-in users to read coupons to apply them
      allow read: if isSignedIn() || isAdmin();
      // Allow admins to manage coupons
      allow write: if isAdmin();
      allow update: if isAdmin() || (isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['uses']));
    }

    /* ===============================
       ORDERS (SECURE)
    =============================== */
     match /orders/{orderId} {
      // Admins can read/write any order.
      allow read, write: if isAdmin();
      
      // Users can create orders for themselves with specific initial data.
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.status == "Pending"
        && request.resource.data.paymentStatus == "Pending"
        && (!request.resource.data.keys().hasAny(['id']));
      
      // Allow users to read their own orders.
      allow get, list: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
  }
}
