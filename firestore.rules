
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* ===============================
       HELPER FUNCTIONS
    =============================== */
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      // FIX: Removed email_verified check as the admin user's email is not verified.
      return request.auth.token.email == 'abhayrat603@gmail.com';
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /* ===============================
       USERS
    =============================== */
    match /users/{userId} {

      // Profile
      allow get, create, update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();

      // ðŸ”” Notifications
      match /notifications/{notificationId} {
        allow get, list: if isOwner(userId) || isAdmin();
        allow write: if isAdmin();
      }

      // ðŸ“¦ Downloadable Products (per user)
      match /downloadableProducts/{productId} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if isAdmin();
      }
    }

    // Allow admin to list users (for admin panel / referral check)
    // Allow signed-in users to query for referral code checks.
    match /users/{document=**} {
      allow list: if isAdmin() || (isSignedIn() && request.query.keys().hasAny(['where']));
    }
    

    /* ===============================
       APP SETTINGS
    =============================== */
    match /app-settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    /* ===============================
       PUBLIC COLLECTIONS
    =============================== */
    match /services/{serviceId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /comboPackages/{comboId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /media/{mediaId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    /* ===============================
       COUPONS
    =============================== */
    match /coupons/{couponId} {
      allow get, list: if isSignedIn() || isAdmin();
      allow write: if isAdmin();

      // User can update ONLY currentUses
      allow update: if isSignedIn()
        && request.resource.data.diff(resource.data)
          .affectedKeys()
          .hasOnly(['currentUses']);
    }

    /* ===============================
       ORDERS (FIXED â€“ NO LIST ERROR)
    =============================== */
    match /orders/{orderId} {

      // Admin full access
      allow read, write: if isAdmin();
      allow list: if isAdmin();


      // User can CREATE own order
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.status == "Pending"
        && request.resource.data.paymentStatus == "Pending";

      // User can READ only own orders via a query
      allow get: if isSignedIn() && resource.data.userId == request.auth.uid;
      // Users can list their OWN orders, but not all orders
      allow list: if isSignedIn() && request.query.where[0] == "userId" && request.query.where[2] == request.auth.uid;
    }
  }
}
