
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return request.auth.token.email == 'abhayrat603@gmail.com';
    }

    /* ===============================
       HELPER FUNCTIONS
    =============================== */
    function isSignedIn() {
      return request.auth.uid != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- USER DATA ACCESS RULES ---
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      // Allow a user to update their own profile, or an admin to update any.
      // Also, allow any signed-in user to update another user's doc ONLY to increment their referral count.
      allow update: if (isOwner(userId) || isAdmin()) ||
                       (isSignedIn() && request.resource.data.referrals == resource.data.referrals + 1);
      allow delete: if isAdmin();

       // --- USER SUB-COLLECTIONS ---
      match /notifications/{notificationId} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if isAdmin(); // Only admin can create/update/delete notifications
      }

      match /downloadableProducts/{productId} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if isAdmin(); // Only admin can add/edit downloadable products
      }
    }
    
    match /users/{document=**} {
        // This allows Genkit flows with service accounts to list users if needed.
        allow list: if request.auth.token.email_verified == true;
    }


    /* ===============================
       SETTINGS (PUBLIC READ, ADMIN WRITE)
    =============================== */
    match /app-settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    /* ===============================
       PUBLIC & ADMIN COLLECTIONS
    =============================== */
    match /services/{serviceId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /comboPackages/{comboId} {
      allow read: if true;
      allow write: if isAdmin();
    }
     match /media/{mediaId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /coupons/{couponId} {
      // Allow signed-in users and service accounts (for AI tools) to read coupons.
      allow get, list: if isSignedIn() || request.auth.token.email_verified == true;
      // Allow admins to manage coupons
      allow write: if isAdmin();
    }

    /* ===============================
       ORDERS (SECURE)
    =============================== */
     match /orders/{orderId} {
      // Admins can read/write any order.
      allow read, write: if isAdmin();
      
      // Users can create orders for themselves with specific initial data.
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.status == "Pending"
        && request.resource.data.paymentStatus == "Pending"
        && (!request.resource.data.keys().hasAny(['id']));
      
      // Allow users to read their own orders.
      allow get, list: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
  }
}
