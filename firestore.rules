
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* ===============================
       HELPER FUNCTIONS
    =============================== */
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      // This is the single source of truth for admin checks.
      return isSignedIn() && request.auth.token.email == 'abhayrat603@gmail.com';
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /* ===============================
       USERS
    =============================== */
    match /users/{userId} {
      // A user can get, create, or update their own profile. Admin can do the same.
      allow get, create, update: if isOwner(userId) || isAdmin();
      // Only an admin can delete user profiles.
      allow delete: if isAdmin();

      // --- USER SUB-COLLECTIONS ---

      match /notifications/{notificationId} {
        // A user can list their own notifications.
        allow list, get: if isOwner(userId) || isAdmin();
        // Only an admin can create/update/delete notifications for any user.
        allow write: if isAdmin();
      }

      match /downloadableProducts/{productId} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if isAdmin();
      }
    }

    // This rule allows ONLY an admin to query the entire users collection.
    match /users/{document=**} {
      allow list: if isAdmin();
    }


    /* ===============================
       APP SETTINGS (PUBLIC READ, ADMIN WRITE)
    =============================== */
    match /app-settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    /* ===============================
       PUBLIC & ADMIN COLLECTIONS
    =============================== */
    match /services/{serviceId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /comboPackages/{comboId} {
      allow read: if true;
      allow write: if isAdmin();
    }

     match /media/{mediaId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    /* ===============================
       COUPONS
    =============================== */
    match /coupons/{couponId} {
      // Allow signed-in users (including admins) to read coupons to apply them.
      allow get, list: if isSignedIn();
      // Allow admins to create/delete/update coupons.
      allow write: if isAdmin();

      // Allow any signed-in user to perform an update ONLY if the only field being changed is 'currentUses'.
      // This allows users to "consume" a coupon without giving them broader update permissions.
      allow update: if isSignedIn()
        && request.resource.data.diff(resource.data)
          .affectedKeys()
          .hasOnly(['currentUses']);
    }

    /* ===============================
       ORDERS (Corrected & Secure)
    =============================== */
    match /orders/{orderId} {

      // ✅ Admin: has full access to read, write, and list all orders.
      allow read, write, list: if isAdmin();

      // ✅ User: can create an order for themselves, with specific initial data.
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.status == "Pending"
        && request.resource.data.paymentStatus == "Pending";

      // ✅ User: can read their OWN orders.
      // This rule works for LIST when the client query includes `where("userId", "==", request.auth.uid)`.
      // Firestore checks this rule against each document returned by the query.
      allow read: if isOwner(resource.data.userId);
    }
  }
}
