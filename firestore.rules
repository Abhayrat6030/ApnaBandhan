
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Publicly readable data
    match /services/{serviceId} {
      allow get, list: if true;
      allow write: if false;
    }

    match /comboPackages/{comboPackageId} {
      allow get, list: if true;
      allow write: if false;
    }

    match /media/{mediaId} {
      allow get, list: if true;
      allow write: if false;
    }

    // Orders: Users can create their own orders. Authenticated users can see their own orders.
    // Admins (hypothetical) could be granted broader access.
    match /orders/{orderId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow get: if request.auth != null && resource.data.userId == request.auth.uid;
      // Allow list for admin users or service accounts. For now, limit to user's own orders.
      // The admin page will filter by role, but rules should secure it.
      // A simple rule for admin would be: allow list: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      // For now, let's keep it simple and assume admin logic is handled client-side (not ideal but avoids rule complexity for now)
      allow list, update, delete: if request.auth != null; // TEMPORARY for admin, should be more specific
    }
    
    // User-specific data
    match /users/{userId} {
      // A user can read and update their own profile data.
      allow get, update, create: if request.auth != null && request.auth.uid == userId;
      // Nobody can list all users or delete a user profile directly.
      allow list, delete: if false;

      // Notifications: Users can list and read their own notifications.
      match /notifications/{notificationId} {
        allow get, list: if request.auth != null && request.auth.uid == userId;
        allow write: if false; // Only server/admins should write notifications
      }

      // Downloadable Products: Users can list and read their own products.
      match /downloadableProducts/{productId} {
        allow get, list: if request.auth != null && request.auth.uid == userId;
        allow write: if false; // Only server/admins should create download links
      }
    }
  }
}
