
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return request.auth.token.email == 'abhayrat603@gmail.com';
    }

    /* ===============================
       HELPER FUNCTIONS
    =============================== */
    function isSignedIn() {
      return request.auth.uid != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- USER DATA ACCESS RULES ---
    match /users/{userId} {
      // Admins can read any profile. Users can only read their own.
      allow get: if isOwner(userId) || isAdmin();
      
      // A new user can create their own profile document.
      allow create: if isOwner(userId);

      // A user can update their own profile. Admin can update any.
      allow update: if isOwner(userId) || isAdmin();
      
      // Only an admin can delete user profiles.
      allow delete: if isAdmin();
      
      // --- USER SUB-COLLECTIONS ---
      match /notifications/{notificationId} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if isAdmin(); // Only admin can create/update/delete notifications
      }

      match /downloadableProducts/{productId} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if isAdmin(); // Only admin can add/edit downloadable products
      }
    }
    
    // This block is separate and crucial for allowing specific queries across the users collection.
    match /users/{document=**} {
        // Admins can list all users. Other signed-in users can query for referral code checks.
        allow list: if isAdmin() || (isSignedIn() && request.query.keys().hasAny(['where']));
    }


    /* ===============================
       SETTINGS (PUBLIC READ, ADMIN WRITE)
    =============================== */
    match /app-settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    /* ===============================
       PUBLIC & ADMIN COLLECTIONS
    =============================== */
    match /services/{serviceId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /comboPackages/{comboId} {
      allow read: if true;
      allow write: if isAdmin();
    }
     match /media/{mediaId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /coupons/{couponId} {
      // Allow signed-in users and admins to read/list coupons. This is needed for the AI tool.
      allow get, list: if isSignedIn() || isAdmin();
      
      // Allow admins to manage coupons (create, delete, toggle active)
      allow write: if isAdmin();
      
      // Allow any signed-in user to update ONLY the currentUses field (by incrementing it).
      // This is for when a user successfully applies a coupon.
      allow update: if isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['currentUses']);
    }

    /* ===============================
       ORDERS (SECURE)
    =============================== */
     match /orders/{orderId} {
      // Admins can read/write any order.
      allow read, write: if isAdmin();
      
      // Users can create orders for themselves with specific initial data.
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.status == "Pending"
        && request.resource.data.paymentStatus == "Pending"
        && (!request.resource.data.keys().hasAny(['id']));
      
      // Allow users to read their own orders.
      allow get, list: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
  }
}
