
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* ===============================
       HELPER FUNCTIONS
    =============================== */
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // This is the single source of truth for admin access.
    function isAdmin() {
      return isSignedIn() && request.auth.token.email == 'abhayrat603@gmail.com';
    }

    /* ===============================
       USERS
       /users/{userId}
    =============================== */
    match /users/{userId} {
      // Users can read and write their own data. Admins can too.
      allow read, write: if isOwner(userId) || isAdmin();

      match /notifications/{notificationId} {
        allow read: if isOwner(userId);
        allow write: if isAdmin(); // Only admin can send notifications
      }

      match /downloadableProducts/{productId} {
        allow read: if isOwner(userId);
        allow write: if isAdmin(); // Only admin can add downloadable products
      }
    }

    /* ===============================
       PUBLIC COLLECTIONS
    =============================== */
    match /services/{serviceId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /comboPackages/{comboId} {
      allow read: if true;
      allow write: if isAdmin();
    }
     match /media/{mediaId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    /* ===============================
       ORDERS (SECURE)
    =============================== */

    // Rule for QUERYING the orders collection. Must be separate.
     match /orders/{orderId} {
      // Admins can get any order. Users can only get their own.
      allow get: if isAdmin() || (resource.data.userId != null && isOwner(resource.data.userId));

      // Admins can update any order.
      allow update: if isAdmin();

      // Users can create orders for themselves with specific initial data.
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.status == "Pending"
        && request.resource.data.paymentStatus == "Pending";

      // Deleting orders is disallowed for safety.
      allow delete: if false;

      // Admins can LIST all orders. Users can LIST their own orders.
      allow list: if isAdmin() || (isSignedIn() && request.query.where[0][2] == request.auth.uid);
    }
  }
}
