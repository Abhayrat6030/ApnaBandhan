
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* ===============================
       HELPER FUNCTIONS
    =============================== */
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      // In a production app, this should check a custom claim:
      // return isSignedIn() && request.auth.token.admin == true;
      return isSignedIn() && request.auth.token.email == 'abhayrat603@gmail.com';
    }

    /* ===============================
       USERS
       /users/{userId}
    =============================== */
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();

      match /notifications/{notificationId} {
        allow read: if isOwner(userId);
        allow write: if isAdmin();
      }

      match /downloadableProducts/{productId} {
        allow read: if isOwner(userId);
        allow write: if isAdmin();
      }
    }

    /* ===============================
       PUBLIC COLLECTIONS
    =============================== */
    match /services/{serviceId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /comboPackages/{comboId} {
      allow read: if true;
      allow write: if isAdmin();
    }
     match /media/{mediaId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    /* ===============================
       ORDERS (FIXED + SAFE)
    =============================== */
    
    // This rule block for the collection is crucial for admin queries.
    match /orders/{orderId} {
      // Admins can perform any action on any specific order document.
      allow get, update, delete: if isAdmin();

      // Users can create orders for themselves.
      // The `status` and `paymentStatus` must be "Pending" on creation.
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.status == "Pending"
        && request.resource.data.paymentStatus == "Pending";
      
      // Users can read THEIR OWN specific order, but not others.
      allow get: if isOwner(resource.data.userId);

    }
    
    // IMPORTANT: This separate rule block for the collection is crucial for queries.
    // It allows admins to perform a `list` query on the entire `orders` collection,
    // which is required for the admin dashboard.
    // It also allows users to query for their own orders.
    match /orders {
        // Admins can list all orders. Users can only list their own.
        allow list: if isAdmin() || (isSignedIn() && request.query.where.get("userId", "") == request.auth.uid);
        
        // This create rule is technically redundant because of the one above,
        // but it can be useful to have it explicitly here for clarity.
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }
  }
}
