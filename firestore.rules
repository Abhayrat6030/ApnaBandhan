
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Publicly readable catalogs. Writes are disabled.
     */
    match /services/{serviceId} {
      allow get, list: if true;
      allow write: if false;
    }

    match /comboPackages/{comboPackageId} {
      allow get, list: if true;
      allow write: if false;
    }

    match /media/{mediaId} {
      allow get, list: if true;
      allow write: if false;
    }

    /**
     * @description Allows authenticated users to create their own orders. Admins can read/list all orders.
     */
    match /orders/{orderId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow get: if request.auth != null && (resource.data.userId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true);
      allow list, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    /**
     * @description User-specific data. Users can manage their own data.
     */
    match /users/{userId} {
        allow get, update, create: if request.auth != null && request.auth.uid == userId;
        allow list, delete: if false;

        /**
         * @description Users can read their own notifications.
         */
        match /notifications/{notificationId} {
            allow get, list: if request.auth != null && request.auth.uid == userId;
            allow write: if false;
        }

        /**
         * @description Users can read their own downloadable products.
         */
        match /downloadableProducts/{productId} {
            allow get, list: if request.auth != null && request.auth.uid == userId;
            allow write: if false;
        }
    }
  }
}
