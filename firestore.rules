
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return request.auth.token.email == 'abhayrat603@gmail.com';
    }

    /* ===============================
       HELPER FUNCTIONS
    =============================== */
    function isSignedIn() {
      return request.auth.uid != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- USER DATA ACCESS RULES ---
    match /users/{userId} {
      // Admins can read any profile. Users can only read their own.
      allow get: if isOwner(userId) || isAdmin();
      
      // A new user can create their own profile document.
      allow create: if isOwner(userId);

      // A user can update their own profile. Admin can update any.
      // Or, an authenticated user can update another user's doc ONLY to increment their referral count.
      allow update: if (isOwner(userId) || isAdmin()) ||
                       (isSignedIn() && request.resource.data.referrals == resource.data.referrals + 1);
      
      // Only an admin can delete user profiles.
      allow delete: if isAdmin();

      // --- USER SUB-COLLECTIONS ---
      match /notifications/{notificationId} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if isAdmin(); 
      }

      match /downloadableProducts/{productId} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if isAdmin(); 
      }
    }
    
    // This block is separate and crucial for referral code validation.
    // It allows any authenticated user to query the users collection.
    match /users/{document=**} {
      allow list: if isSignedIn();
    }


    /* ===============================
       SETTINGS (PUBLIC READ, ADMIN WRITE)
    =============================== */
    match /app-settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    /* ===============================
       PUBLIC & ADMIN COLLECTIONS
    =============================== */
    match /services/{serviceId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /comboPackages/{comboId} {
      allow read: if true;
      allow write: if isAdmin();
    }
     match /media/{mediaId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /coupons/{couponId} {
      // Allow signed-in users to read coupons to apply them
      allow get, list: if isSignedIn() || isAdmin();
      // Allow admins to manage coupons
      allow write: if isAdmin();
      // Allow a user to increment the 'uses' field, or admin to do anything.
      allow update: if isAdmin() || (isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['uses']));
    }

    /* ===============================
       ORDERS (SECURE)
    =============================== */
     match /orders/{orderId} {
      // Admins can read/write any order.
      allow read, write: if isAdmin();
      
      // Users can create orders for themselves with specific initial data.
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.status == "Pending"
        && request.resource.data.paymentStatus == "Pending"
        && (!request.resource.data.keys().hasAny(['id']));
      
      // Allow users to read their own orders.
      allow get, list: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
  }
}
