
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =====================================================================
    // HELPER FUNCTIONS
    // =====================================================================

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Admin check is now based on the email directly.
    function isAdmin() {
        return isSignedIn() && request.auth.token.email == 'abhayrat603@gmail.com';
    }

    function hasOnlyFields(fields) {
      return request.resource.data.keys().removeAll(fields).size() == 0;
    }


    // =====================================================================
    // USERS COLLECTION
    // =====================================================================
    match /users/{userId} {
      // Admins can do anything. Users can read/update their own data.
      allow read, write: if isAdmin() || isOwner(userId);

      match /notifications/{notificationId} {
        allow read: if isAdmin() || isOwner(userId);
        allow write: if isAdmin(); // Only admin can send notifications
      }

      match /downloadableProducts/{productId} {
        allow read: if isAdmin() || isOwner(userId);
        allow write: if isAdmin(); // Only admin can add downloadable products
      }
    }


    // =====================================================================
    // PUBLIC COLLECTIONS (READ-ONLY for users, WRITE for Admin)
    // =====================================================================

    match /services/{serviceId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /comboPackages/{comboId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /media/{mediaId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // =====================================================================
    // ORDERS COLLECTION (SECURE)
    // =====================================================================
    match /orders/{orderId} {
    
      // Admin can get any order. Users can only get their own.
      allow get: if isAdmin() || (resource.data.userId != null && isOwner(resource.data.userId));

      // Admin can list all orders. Users can list their own orders.
      allow list: if isAdmin() || (isSignedIn() && request.query.where[0] == "userId" && request.query.where[1] == "==" && request.query.where[2] == request.auth.uid);

      // Users can create orders for themselves with specific initial data.
      allow create: if isSignedIn()
                      && request.resource.data.userId == request.auth.uid
                      && request.resource.data.status == "Pending"
                      && request.resource.data.paymentStatus == "Pending"
                      && hasOnlyFields(['userId', 'fullName', 'phoneNumber', 'email', 'weddingDate', 'selectedServiceId', 'messageNotes', 'orderDate', 'status', 'paymentStatus']);
                      
      // Only Admin can update any order.
      allow update: if isAdmin();

      // Deleting orders is disallowed for safety.
      allow delete: if false;
    }
  }
}
