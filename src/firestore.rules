
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ===============================
    // HELPERS
    // ===============================
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // ===============================
    // USERS
    // ===============================
    match /users/{userId} {
      // Users can read and write their own data. Admins can too.
      allow read, write: if isOwner(userId) || request.auth.token.email == 'abhayrat603@gmail.com';

      match /notifications/{notificationId} {
        allow read: if isOwner(userId);
        allow write: if request.auth.token.email == 'abhayrat603@gmail.com'; // Only admin can send notifications
      }

      match /downloadableProducts/{productId} {
        allow read: if isOwner(userId);
        allow write: if request.auth.token.email == 'abhayrat603@gmail.com'; // Only admin can add downloadable products
      }
    }

    // ===============================
    // PUBLIC COLLECTIONS
    // ===============================
    match /services/{serviceId} {
      allow read: if true;
      allow write: if request.auth.token.email == 'abhayrat603@gmail.com';
    }

    match /comboPackages/{comboId} {
      allow read: if true;
      allow write: if request.auth.token.email == 'abhayrat603@gmail.com';
    }
     match /media/{mediaId} {
      allow read: if true;
      allow write: if request.auth.token.email == 'abhayrat603@gmail.com';
    }

    // ===============================
    // ORDERS (SECURE)
    // ===============================
     match /orders/{orderId} {
      // Admins can read/list/write any order.
      allow read, list, write: if request.auth.token.email == 'abhayrat603@gmail.com';

      // Users can create orders for themselves.
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid;
      
      // Users can read their own orders.
      allow get: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
  }
}
