
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    // Public read-only collections
    match /services/{serviceId} {
      allow read: if true;
      allow write: if false; // All writes must come from a verified admin via server actions
    }
    match /comboPackages/{pkgId} {
      allow read: if true;
      allow write: if false;
    }
     match /media/{mediaId} {
      allow read: if true;
      allow write: if false;
    }

    // User-specific data
    match /users/{userId} {
      // Users can read/write their own profile
      allow read, write: if request.auth.uid == userId;

      match /notifications/{notificationId} {
        allow read: if request.auth.uid == userId;
        allow write: if false; // Notifications are written by the server
      }
      match /downloadableProducts/{productId} {
        allow read: if request.auth.uid == userId;
        allow write: if false; // Products are added by the server
      }
    }

    // Orders
    match /orders/{orderId} {
      // Users can create orders for themselves
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      // Users can read their own orders
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      // No direct updates or deletes from the client for orders
      allow update, delete: if false;
    }

    // Default deny all other paths
     match /{path=**} {
      allow read, write: if false;
    }
  }
}
