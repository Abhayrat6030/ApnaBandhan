
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.email == "abhayrat603@gmail.com";
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Default Deny
    match /{path=**} {
      allow read, write: if false;
    }

    // Public collections
    match /services/{serviceId} {
      allow get: if true;
      allow list: if true;
      allow write: if isAdmin();
    }
    match /comboPackages/{pkgId} {
      allow get: if true;
      allow list: if true;
      allow write: if isAdmin();
    }
     match /media/{mediaId} {
      allow get: if true;
      allow list: if true;
      allow write: if isAdmin();
    }

    // User-specific data
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();

      match /notifications/{notificationId} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if isAdmin();
      }
      match /downloadableProducts/{productId} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if isAdmin();
      }
    }

    // Orders
    match /orders/{orderId} {
      allow read, list, write: if isAdmin();
      allow create: if isOwner(request.resource.data.userId);
      allow get: if isOwner(resource.data.userId);
      allow list: if isSignedIn() && request.query.where[0][2] == request.auth.uid;
    }
  }
}
