
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =====================================================================
    // HELPER FUNCTIONS
    // =====================================================================

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isSignedIn() && request.auth.token.email == 'abhayrat603@gmail.com';
    }

    // =====================================================================
    // USERS COLLECTION
    // =====================================================================
    match /users/{userId} {
      // Admins can do anything. Users can read/write their own data.
      // Using 'write' covers create, update, delete.
      allow read, write: if isAdmin() || isOwner(userId);

      // Subcollections for user-specific data
      match /notifications/{notificationId} {
        allow read: if isOwner(userId);
        // Only admin can create/update/delete notifications.
        allow write: if isAdmin();
      }

      match /downloadableProducts/{productId} {
        allow read: if isOwner(userId);
        // Only admin can add downloadable products.
        allow write: if isAdmin();
      }
    }


    // =====================================================================
    // PUBLIC COLLECTIONS (READ-ONLY for users, WRITE for Admin)
    // =====================================================================

    match /services/{serviceId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /comboPackages/{comboId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /media/{mediaId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // =====================================================================
    // ORDERS COLLECTION (SECURE)
    // =====================================================================
    match /orders/{orderId} {
    
      // GET (Single Document Read): Admin can get any order. Users can only get their own.
      allow get: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);

      // LIST (Query): Admin can list all orders. Users can list their own orders.
      allow list: if isAdmin() || (isSignedIn() && request.query.get('userId') == request.auth.uid);
                      
      // CREATE: Signed-in users can create orders for themselves.
      // We can add validation for initial data here.
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
                      
      // UPDATE: Only Admin can update any order.
      allow update: if isAdmin();

      // DELETE: Deleting orders is disallowed for safety.
      allow delete: if false;
    }
  }
}
