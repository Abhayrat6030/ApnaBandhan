
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return request.auth.token.email == 'abhayrat603@gmail.com';
    }

    /* ===============================
       HELPER FUNCTIONS
    =============================== */
    function isSignedIn() {
      return request.auth.id != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- USER DATA ACCESS RULES ---

    // Rule for reading/writing INDIVIDUAL user documents
    match /users/{userId} {
      allow get, update: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow delete: if isAdmin();
      
      // Rules for user sub-collections
      match /notifications/{notificationId} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if isAdmin();
      }
      match /downloadableProducts/{productId} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if isAdmin();
      }
    }

    // Rule for LISTING/QUERYING the users collection
    // This is crucial for checking referral codes during signup.
    // Admin also needs this to list all users.
    match /users/{document=**} {
      allow list: if true;
    }

    /* ===============================
       SETTINGS (PUBLIC READ, ADMIN WRITE)
    =============================== */
    match /app-settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    /* ===============================
       PUBLIC & ADMIN COLLECTIONS
    =============================== */
    match /services/{serviceId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /comboPackages/{comboId} {
      allow read: if true;
      allow write: if isAdmin();
    }
     match /media/{mediaId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /coupons/{couponId} {
      // Allow signed-in users to read coupons to apply them
      allow read: if isSignedIn() || isAdmin();
      // Allow admins to manage coupons
      allow write: if isAdmin();
      allow update: if isAdmin() || (isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['uses']));
    }

    /* ===============================
       ORDERS (SECURE)
    =============================== */
     match /orders/{orderId} {
      // Admins can read/write any order.
      allow read, write: if isAdmin();
      
      // Users can create orders for themselves with specific initial data.
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.status == "Pending"
        && request.resource.data.paymentStatus == "Pending"
        && (!request.resource.data.keys().hasAny(['id']));
      
      // Allow users to read their own orders.
      allow get, list: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
  }
}
