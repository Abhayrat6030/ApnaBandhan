
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =====================================================================
    // HELPER FUNCTIONS (सहायक फ़ंक्शंस)
    // =====================================================================

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      // Use exists() to check for the admin document.
      // This is more secure and flexible than hardcoding an email.
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Fallback for the original hardcoded admin email, for safety.
    function isLegacyAdmin() {
        return isSignedIn() && request.auth.token.email == 'abhayrat603@gmail.com';
    }

    function hasFields(fields) {
      return request.resource.data.keys().hasAll(fields);
    }
    
    function hasOnlyFields(fields) {
      return request.resource.data.keys().removeAll(fields).size() == 0;
    }


    // =====================================================================
    // ADMINS COLLECTION
    // =====================================================================
    match /admins/{userId} {
        // Only other admins can read or write the list of admins.
        allow read, write: if isAdmin() || isLegacyAdmin();
    }


    // =====================================================================
    // USERS COLLECTION (उपयोगकर्ता संग्रह)
    // =====================================================================
    match /users/{userId} {
      
      allow read, update, delete: if isOwner(userId) || isAdmin() || isLegacyAdmin();
      allow create: if isOwner(userId);

      // --- Users Sub-collections (उप-संग्रह) ---
      match /notifications/{notificationId} {
        allow read: if isOwner(userId);
        allow write: if isAdmin() || isLegacyAdmin();
      }

      match /downloadableProducts/{productId} {
        allow read: if isOwner(userId);
        allow write: if isAdmin() || isLegacyAdmin();
      }
    }


    // =====================================================================
    // PUBLIC COLLECTIONS (सार्वजनिक संग्रह)
    // =====================================================================

    match /services/{serviceId} {
      allow read: if true;
      allow write: if isAdmin() || isLegacyAdmin();
    }

    match /comboPackages/{comboId} {
      allow read: if true;
      allow write: if isAdmin() || isLegacyAdmin();
    }

    match /media/{mediaId} {
      allow read: if true;
      allow write: if isAdmin() || isLegacyAdmin();
    }

    // =====================================================================
    // ORDERS COLLECTION (ऑर्डर संग्रह)
    // =====================================================================
    match /orders/{orderId} {
    
      // GET: Admin can get any order. User can get their own.
      allow get: if isAdmin() || isLegacyAdmin() || (resource.data.userId != null && isOwner(resource.data.userId));

      // LIST: Admin can list all. User can list their own via query.
      allow list: if isAdmin() || isLegacyAdmin() || (isSignedIn() && request.query.where[0] == "userId" && request.query.where[1] == "==" && request.query.where[2] == request.auth.uid);

      // CREATE: Any signed-in user can create an order for themselves.
      allow create: if isSignedIn()
                      && request.resource.data.userId == request.auth.uid
                      && request.resource.data.status == "Pending"
                      && request.resource.data.paymentStatus == "Pending"
                      && hasOnlyFields(['userId', 'fullName', 'phoneNumber', 'email', 'weddingDate', 'selectedServiceId', 'messageNotes', 'orderDate', 'status', 'paymentStatus']);
                      
      // UPDATE: Only an admin can update any order. Users cannot.
      allow update: if isAdmin() || isLegacyAdmin();

      // DELETE: Disallowed for safety.
      allow delete: if false;
    }
  }
}
