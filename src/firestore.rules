
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return request.auth.token.email == 'abhayrat603@gmail.com';
    }

    /* ===============================
       HELPER FUNCTIONS
    =============================== */
    function isSignedIn() {
      return request.auth.id != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- USER DATA ACCESS RULES ---

    match /users/{userId} {
      // Admins can read any profile. Users can only read their own.
      allow get: if isOwner(userId) || isAdmin();

      // Anyone can query the user collection. This is required to validate referral codes.
      // The query itself will only return documents that the user has `get` permission for,
      // which is handled by Firestore's rules logic. For this to work for our signup
      // referral check, we will need to adjust the query on the client, but the `list` rule is a prerequisite.
      allow list: if true;
      
      // A new user can create their own profile document.
      allow create: if isOwner(userId);

      // A user can update their own profile. Admin can update any.
      allow update: if isOwner(userId) || isAdmin();
      
      // Only an admin can delete user profiles.
      allow delete: if isAdmin();

      // --- USER SUB-COLLECTIONS ---
      match /notifications/{notificationId} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if isAdmin(); // Only admin can create/update/delete notifications
      }

      match /downloadableProducts/{productId} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if isAdmin(); // Only admin can add/edit downloadable products
      }
    }

    /* ===============================
       SETTINGS (PUBLIC READ, ADMIN WRITE)
    =============================== */
    match /app-settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    /* ===============================
       PUBLIC & ADMIN COLLECTIONS
    =============================== */
    match /services/{serviceId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /comboPackages/{comboId} {
      allow read: if true;
      allow write: if isAdmin();
    }
     match /media/{mediaId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /coupons/{couponId} {
      // Allow signed-in users to read coupons to apply them
      allow read: if isSignedIn() || isAdmin();
      // Allow admins to manage coupons
      allow write: if isAdmin();
      // Allow a user to increment the 'uses' field, or admin to do anything.
      allow update: if isAdmin() || (isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['uses']));
    }

    /* ===============================
       ORDERS (SECURE)
    =============================== */
     match /orders/{orderId} {
      // Admins can read/write any order.
      allow read, write: if isAdmin();
      
      // Users can create orders for themselves with specific initial data.
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.status == "Pending"
        && request.resource.data.paymentStatus == "Pending"
        && (!request.resource.data.keys().hasAny(['id']));
      
      // Allow users to read their own orders.
      allow get, list: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
  }
}
