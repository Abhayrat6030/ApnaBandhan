
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =====================================================================
    // HELPER FUNCTIONS
    // =====================================================================

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
        return isSignedIn() && request.auth.token.email == 'abhayrat603@gmail.com';
    }

    // =====================================================================
    // USERS COLLECTION
    // =====================================================================
    match /users/{userId} {
      // Admins can do anything. Users can read/update their own data.
      allow read, write: if isAdmin() || isOwner(userId);

      match /notifications/{notificationId} {
        allow read: if isAdmin() || isOwner(userId);
        allow write: if isAdmin(); // Only admin can send notifications
      }

      match /downloadableProducts/{productId} {
        allow read: if isAdmin() || isOwner(userId);
        allow write: if isAdmin(); // Only admin can add downloadable products
      }
    }


    // =====================================================================
    // PUBLIC COLLECTIONS (READ-ONLY for users, WRITE for Admin)
    // =====================================================================

    match /services/{serviceId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /comboPackages/{comboId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /media/{mediaId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // =====================================================================
    // ORDERS COLLECTION (SECURE)
    // =====================================================================
    match /orders/{orderId} {
    
      // Read access: Admin can read any order. Users can read their own.
      allow read: if isAdmin() || (resource.data.userId != null && isOwner(resource.data.userId));

      // Create access: Signed-in users can create orders for themselves.
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
                      
      // Update access: Only Admin can update any order.
      allow update: if isAdmin();

      // Delete access: Deleting orders is disallowed for safety.
      allow delete: if false;
    }
  }
}
